{
	"compilerOptions": {
		"outDir": "build",
		"baseUrl": "src",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["es6", "es2017", "esnext.asynciterable"],
		"sourceMap": true,
		"pretty": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitOnError": true,
		"typeRoots": ["./node_modules/@types", "./typings"]
	}
}
